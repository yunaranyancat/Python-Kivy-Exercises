#:import Window kivy.core.window.Window

<MenuButtons@Button>
    font_size : 32
    color : 0, 0, 0, 1
    size : 150, 50
    background_normal: ' '
    background_down: ' '
    background_color: .88, .88, .88, 1

<ScreenButtons@Button>
    font_size : 20
    color : 0, 0, 0, 1
    size : 80, 40
    background_normal: ' '
    background_down: ' '
    background_color: .88, .88, .88, 1

<MenuScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'heart_800x600.jpg'

    MenuUI:
        MenuButtons:
            text: "Start"
            pos: (Window.width-150)/2, (Window.height-50)/2 + 60
            on_press:
                root.manager.transition.direction = "left"
                root.manager.transition.duration = 1
                root.manager.current = "CAT_lonely"
        MenuButtons:
            text: "Exit"
            pos: (Window.width-150)/2, (Window.height-50)/2
            on_press: app.stop()

        MenuButtons:
            text: "Rate App"
            pos: (Window.width-150)/2, (Window.height-50)/2 - 60


<LonelyCatScreen>:
    id: lonely_cat
    on_enter:
        lonely_cat.showtext()

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        Image:
            source: "lonely_800x600.jpg"
            size_hint_y: None
            size_hint_x: None
            height: Window.height
            width: Window.width

            ScreenButtons:
                text: "Menu"
                pos: root.x+20, root.y+20
                on_press:
                    root.manager.transition.direction = "right"
                    root.manager.transition.duration = 1
                    root.manager.current = "menu"

            Label:
                text_size: root.width, None
                size: self.texture_size
                halign: 'left'
                valign: 'middle'
                font_size: 20
                padding_y : root.y + 80
                padding_x : root.x + 20
                color: 0, 0, 0, 1
